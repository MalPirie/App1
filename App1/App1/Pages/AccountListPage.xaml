<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Pages.AccountListPage"
             Title="Accounts">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="+" Command="{Binding CreateAccountCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ListView HasUnevenRows="True" ItemsSource="{Binding Accounts}" SelectedItem="{Binding SelectedAccount}" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding Description}" />
                            <Label Text="{Binding Balance, StringFormat='{0:0.00}'}" HorizontalOptions="LayoutOptions.EndAndExpand" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>